<div class="uk-container uk-container-center">
	<div class="uk-grid">
		<div class="uk-width-4-5">
			<% @posts.each do |p| %>
				<div class="post-box">
					<div class="post-date">
						<%= p.created_at.strftime("<span>%e</span><span>%B</span><span>%Y</span>").html_safe %>
					</div>
					<div class="title">
						<h2><%= link_to p.title, p %></h2>
					</div>
					<div class="post-info">
						<%= p.show_count %>
					</div>
					<% unless p.image.blank? %>
            			<%= image_tag p.image %>
            		<% end %>
					<div class="post-text">
						<p><%= p.text %></p>
					</div>
				</div>
			<% end %>
		</div>
		<div class="uk-width-1-5">
			<div class="heading"><h1>Блог</h1></div>
		</div>
	</div>
</div>