<div id="map">
</div>
<div id="our-contacts" class="card card-raised card-nav-tabs">
	<div class="header header-info text-center">
		<h4 class="card-title">Наши Контакты</h4>
	</div>
	<div class="content content-danger">
		<ul class="contact-info">
			<li class="email"><%= fa_icon "envelope-o" %><%= mail_to 'webmaster@bidon-gs.com', 'webmaster@bidon-gs.com' %></li>
			<li class="phone"><%= fa_icon "phone" %><%= tel_to '+38 (098) 07-111-11' %></li>
			<li class="skype"><%= fa_icon "skype" %><%= link_to 'Отправить сообщение', 'skype:astral922?chat' %></li>
			<li class="address"><%= fa_icon "map-marker" %>Черкассы, ул. Казацкая 1/1</li>
		</ul>
	</div>
</div>
<div id="feedback-form" class="card card-raised card-nav-tabs">
	<div class="header header-primary text-center">
		<h4 class="card-title">Форма обратной связи</h4>
	</div>
	<%= form_for @feedback, url: {controller: "feedbacks", action: "create"}, remote: true do |f| %>
		<div class="content">
			<div class="row">
				<% if @feedback.errors.any? %>
					<div id="error_explanation" class="card">
						<div class="content content-danger">
							<h4 class="card-title"><%= pluralize(@feedback.errors.count, "error") %> prohibited this post from being saved:</h4>
							<ul>
								<% @feedback.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					</div>
				<% end %>
				<div class="col-md-12">
					<div class="form-group label-floating">
						<%= f.label :name, "Имя", class: 'control-label' %>
						<%= f.text_field :name, class: 'form-control' %>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group label-floating">
						<%= f.label :email, "E-mail", class: 'control-label' %>
						<%= f.email_field :email, class: 'form-control' %>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group label-floating">
						<%= f.label :phone, "Телефон", class: 'control-label' %>
						<%= f.text_field :phone, class: 'form-control' %>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group label-floating">
						<%= f.label :message, "Сообщение", class: 'control-label' %>
						<%= f.text_area :message, rows: 6, class: 'form-control' %>
					</div>
				</div>
				<div class="col-md-12 actions">
					<%= f.button class: 'btn btn-primary btn-lg btn-block' do %>
						<%= "Отправить" %>
						<%= content_tag(:div, '', class: 'ripple-container') %>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>