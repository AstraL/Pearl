<div class="card card-signup card-raised">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="header header-primary text-center">
			<h4>Вход</h4>
		</div>
		<div class="content">
			<div class="input-group">
				<%= content_tag(:span, class: 'input-group-addon') do %>
					<%= content_tag(:i, "face", class: 'material-icons') %>
				<% end %>
				<%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'form-control' %>
			</div>

			<div class="input-group">
				<%= content_tag(:span, class: 'input-group-addon') do %>
					<%= content_tag(:i, "lock_outline", class: 'material-icons') %>
				<% end %>
				<%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', class: 'form-control' %>
			</div>

			<% if devise_mapping.rememberable? -%>
				<div class="checkbox">
					<%= f.label :remember_me do %>
						<%= f.check_box :remember_me %>
						Запомнить меня
					<% end %>
				</div>
			<% end -%>
		</div>
		<div class="footer text-center">
			<%= f.button "Войти", class: 'btn btn-primary btn-round btn-lg' %>
		</div>
	<% end %>
</div>


