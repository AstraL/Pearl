<div class="uk-container uk-container-center">
	<h1>Create post</h1>

	<%= form_for(@post) do |f| %>
	  <% if @post.errors.any? %>
    	<div id="error_explanation">
	      	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

	      	<ul>
	      		<% @post.errors.full_messages.each do |msg| %>
	        		<li><%= msg %></li>
	      		<% end %>
	      	</ul>
    	</div>
 		<% end %>

 		<div class="field">
    		<%= f.label :title, "Заголовок" %><br>
    		<%= f.text_field :title %>
  		</div>

  		<div class="field">
		    <%= f.label :text, "Сообщение" %><br>
		    <%= f.text_area :text %>
		</div>

  		<div class="field">
		    <%= f.label :image, "Картинка" %><br>
		    <%= f.file_field :image %>
		</div>

  		<div class="field">
		    <%= f.label :kind, "Тип" %><br>
		    <% typies_array = ["news", "offers", "blog"]%>
		    <%= f.select :kind, options_for_select(typies_array) %>
		</div>
		 <div class="actions">
    		<%= f.submit "Отправить сообщение", class: "btn btn-large btn-primary" %>
  		</div>
	<% end %>
</div>
